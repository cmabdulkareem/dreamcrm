{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)\\.(svg|png|jpg|jpeg|gif|webp|ico|css|js)",
      "headers": {
        "cache-control": "public, immutable, max-age=31536000"
      }
    },
    {
      "src": "/images/(.*)\\.(svg|png|jpg|jpeg|gif|webp|ico)",
      "headers": {
        "cache-control": "public, max-age=31536000"
      }
    },
    {
      "src": "/(manifest.webmanifest|sw.js|registerSW.js|workbox-(.*).js|icon-(.*).png|favicon.png)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}